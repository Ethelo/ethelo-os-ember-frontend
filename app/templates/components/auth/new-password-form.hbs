<div class="panel panel-default untabbed-modal-panel reset-password-panel">

  <div class="panel-body">
    <strong>{{t 'authentication.reset_password.title'}}</strong>

    {{#if errorList.auth}}
      <div class="alert alert-danger">
        {{t errorList.auth}}
      </div>
    {{/if}}

    <div class="form-group {{if errorList.password 'has-error'}}">
      <label class="control-label" for="new-password">{{t 'nouns.password'}}</label>
      {{input type="password"
              value=password
              id="new-password"
              autocomplete="new-password"
              name='password'
              placeholder=(t 'prompts.password')
              class="form-control"
      }}
      {{#if errorList.password}}
        <span class="help-block">{{t errorList.password}}</span>
      {{/if}}
    </div>

    <div class="form-group {{if errorList.confirmation 'has-error'}}">
      <label class="control-label" for="confirm-password">{{t 'nouns.confirmation'}}</label>
      {{input type="password"
              value=confirmation
              id="confirm-password"
              autocomplete="new-password"
              name='confirmation'
              placeholder=(t 'prompts.confirm_password')
              class="form-control"
      }}
      {{#if errorList.confirmation}}
        <span class="help-block">{{t errorList.confirmation}}</span>
      {{/if}}
    </div>

    <div class="clearfix"></div>
    {{#if processing}}
      <div class="signon-spinner">
        {{tool/loading-spinner loadingText=(t 'authentication.processing.reset_password')}}
      </div>
    {{else}}
      <a href="#" {{action 'resetPassword'}}
       role="button"
        title="{{t 'accessibility.submit'}}"
        class="btn-block btn-primary btn btn-raised text-uppercase"
      >
        {{t 'authentication.reset_password.action'}}
      </a>
    {{/if}}


  </div>
</div>