{{#bootstrap/bootstrap-collapse
        title=(scopet 'voting.weighting.sliders.subtitle' translationScope defaultIsUnscoped=true)
        beginCollapsed=false
        panelId=panelId
        vote=participantVotedOnAllOptionCategories
}}

  {{{scopet 'intro_html' sliderScope translationScope defaultIsUnscoped=true}}}

  {{#if showPieChart}}
    {{charts/high-charts content=chartData chartOptions=chartOptions chartId=chartId}}
  {{/if}}

  {{#if showVotingTools}}
    {{#each sortedOptionCategories as |optionCategory index|}}
      <div class="slider-container" id="slider-{{optionCategory.cssId}}">
        <div class="importance-slider-header">
          {{{scopet 'prompt_html' sliderScope translationScope
                    index=(add index 1) title=optionCategory.title defaultIsUnscoped=true}}}
        </div>
        {{#if showDescriptions}}
          <div class="importance-slider-desc">
            {{{optionCategory.info}}}
          </div>
        {{/if}}

        {{voting/option-category-weight-slider
                optionCategory=optionCategory
                labelMin=(scopet 'unimportant' sliderScope translationScope defaultIsUnscoped=true)
                labelMax=(scopet 'very_important' sliderScope translationScope defaultIsUnscoped=true)
        }}
      </div>
    {{/each}}
  {{/if}}
{{/bootstrap/bootstrap-collapse}}